{
  "name": "programkasir",
  "version": "1.0.0",
  "description": "CodeIgniter is a PHP full-stack web framework that is light, fast, flexible and secure. More information can be found at the [official site](https://codeigniter.com).",
  "keywords": [],
  "license": "ISC",
  "author": "syahfrinorezky",
  "type": "commonjs",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev:css": "npx @tailwindcss/cli -i ./public/css/input.css -o ./public/css/output.css --watch",
    "build:css": "npx @tailwindcss/cli -i ./public/css/input.css -o ./public/css/output.css --minify",
    "dev:js": "esbuild public/js/main.js --bundle --outfile=public/js/bundle.js --watch",
    "build:js": "esbuild public/js/main.js --bundle --outfile=public/js/bundle.js --minify",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:js\"",
    "build": "npm run build:css && npm run build:js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.1",
    "@tailwindcss/cli": "^4.1.13",
    "alpinejs": "^3.15.0",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.10"
  }
}
